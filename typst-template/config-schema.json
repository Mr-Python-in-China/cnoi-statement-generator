{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contest Data Configuration",
  "description": "Schema for CNOI statement generator contest data configuration",
  "type": "object",
  "required": [
    "title",
    "subtitle",
    "dayname",
    "date",
    "noi_style",
    "file_io",
    "use_pretest",
    "support_languages",
    "problems",
    "precautionMarkdown"
  ],
  "properties": {
    "title": {
      "type": "string",
      "description": "Contest title"
    },
    "subtitle": {
      "type": "string",
      "description": "Contest subtitle"
    },
    "dayname": {
      "type": "string",
      "description": "Day name or session name"
    },
    "date": {
      "type": "object",
      "required": ["start", "end"],
      "properties": {
        "start": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 6,
          "maxItems": 6,
          "description": "Start date [year, month, day, hour, minute, second]"
        },
        "end": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 6,
          "maxItems": 6,
          "description": "End date [year, month, day, hour, minute, second]"
        }
      }
    },
    "noi_style": {
      "type": "boolean",
      "description": "Whether to use NOI style"
    },
    "file_io": {
      "type": "boolean",
      "description": "Whether to use file I/O"
    },
    "use_pretest": {
      "type": "boolean",
      "description": "Whether to use pretest"
    },
    "support_languages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "compile_options"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Language name"
          },
          "compile_options": {
            "type": "string",
            "description": "Compilation options"
          }
        }
      },
      "minItems": 1
    },
    "problems": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "title",
          "type",
          "dir",
          "exec",
          "input",
          "output",
          "time_limit",
          "memory_limit",
          "testcase",
          "point_equal",
          "submit_filename",
          "pretestcase",
          "statementMarkdown"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Problem English name"
          },
          "title": {
            "type": "string",
            "description": "Problem Chinese title"
          },
          "type": {
            "type": "string",
            "description": "Problem type"
          },
          "dir": {
            "type": "string",
            "description": "Problem directory"
          },
          "exec": {
            "type": "string",
            "description": "Executable file name"
          },
          "input": {
            "type": "string",
            "description": "Input file name"
          },
          "output": {
            "type": "string",
            "description": "Output file name"
          },
          "time_limit": {
            "type": "string",
            "description": "Time limit"
          },
          "memory_limit": {
            "type": "string",
            "description": "Memory limit"
          },
          "testcase": {
            "type": "string",
            "description": "Number of test cases"
          },
          "point_equal": {
            "type": "string",
            "description": "Whether test points are equal"
          },
          "submit_filename": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Submit file names for each language"
          },
          "pretestcase": {
            "type": "string",
            "description": "Number of pretest cases"
          },
          "statementMarkdown": {
            "type": "string",
            "description": "Problem statement in markdown"
          }
        }
      }
    },
    "precautionMarkdown": {
      "type": "string",
      "description": "Precaution text in markdown"
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["uuid", "name", "base64", "mimeType"],
        "properties": {
          "uuid": {
            "type": "string",
            "description": "Unique identifier for the image"
          },
          "name": {
            "type": "string",
            "description": "Image name"
          },
          "base64": {
            "type": "string",
            "description": "Base64-encoded image data"
          },
          "mimeType": {
            "type": "string",
            "description": "MIME type of the image (e.g., image/png, image/jpeg)"
          }
        }
      }
    }
  }
}
